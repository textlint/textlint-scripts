{
  "directories": {
    "test": "test"
  },
  "author": "azu",
  "license": "MIT",
  "files": [
    "register.js",
    "register-ts.js",
    "bin/",
    "scripts/",
    "configs/"
  ],
  "name": "textlint-scripts",
  "version": "3.0.0",
  "description": "textlint npm-run-scripts CLI help to create textlint rule.",
  "bin": {
    "textlint-scripts": "./bin/cmd.js"
  },
  "scripts": {
    "test": "node test/test-example.js",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\""
  },
  "keywords": [
    "textlint"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/textlint/textlint-scripts.git"
  },
  "bugs": {
    "url": "https://github.com/textlint/textlint-scripts/issues"
  },
  "homepage": "https://github.com/textlint/textlint-scripts",
  "devDependencies": {
    "husky": "^4.2.5",
    "lint-staged": "^10.2.13",
    "prettier": "^2.0.5",
    "shelljs": "^0.8.4"
  },
  "dependencies": {
    "@babel/cli": "^7.11.5",
    "@babel/core": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "@babel/register": "^7.11.5",
    "babel-plugin-static-fs": "^3.0.0",
    "confirmer": "^1.1.2",
    "cross-spawn": "^7.0.3",
    "mocha": "^8.1.3",
    "pkg-to-readme": "^1.1.0",
    "textlint-tester": "^5.2.6"
  },
  "prettier": {
    "singleQuote": false,
    "printWidth": 120,
    "tabWidth": 4
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "post-commit": "git reset",
      "pre-commit": "lint-staged"
    }
  }
}
