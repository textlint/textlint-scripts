{
  "directories": {
    "test": "test"
  },
  "author": "azu",
  "license": "MIT",
  "files": [
    "register.js",
    "bin/",
    "scripts/",
    "configs/"
  ],
  "name": "textlint-scripts",
  "version": "1.4.0",
  "description": "textlint npm-run-scripts CLI help to create textlint rule.",
  "bin": {
    "textlint-scripts": "./bin/cmd.js"
  },
  "scripts": {
    "test": "bash test/test-example.sh",
    "prettier": "prettier --write '**/*.{js,jsx,ts,tsx,css}'",
    "precommit": "lint-staged",
    "postcommit": "git reset"
  },
  "keywords": [
    "textlint"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/textlint/textlint-scripts.git"
  },
  "bugs": {
    "url": "https://github.com/textlint/textlint-scripts/issues"
  },
  "homepage": "https://github.com/textlint/textlint-scripts",
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^4.3.0",
    "prettier": "^1.7.4"
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "confirmer": "^1.1.1",
    "cross-spawn": "^5.0.1",
    "mocha": "^4.0.1",
    "pkg-to-readme": "^1.1.0",
    "textlint-tester": "^3.0.1"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 4
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write",
      "git add"
    ]
  }
}
